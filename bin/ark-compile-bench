#!/bin/zsh
set -eu

cd ark
hyperfine --warmup 0 --runs=1 --setup 'cargo fetch' --prepare 'cargo clean' \
    'cargo check' \
    'cargo clippy' \
    'cargo build -r' \
    'cargo build -r -p ark-client'
cd ..

cd ark-modules
hyperfine --warmup 0 --runs=1 --setup 'cargo fetch' --prepare 'cargo clean' \
    'cargo check' \
    'cargo clippy' \
    'cargo build -r' \
    './mbark build'
